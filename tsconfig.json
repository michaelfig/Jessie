{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "es6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "typeRoots": ["./types"]
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ]
}
